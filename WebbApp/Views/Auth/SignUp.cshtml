@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<section id="signup">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }


        <div class="section-title">
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-action="SignIn" asp-controller="Auth">Sign in here.</a></p>
        </div>


        <form method="post" id="formSignUp" asp-action="SignUp" asp-controller="Auth" novalidate>

            <div class="flex">
                <div id="form-firstname">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" name="firstname" tabindex="1" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div id="form-lastname">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" name="lastname" tabindex="2" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            
            
            <div id="form-email">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" name="email" tabindex="3" />
                <span asp-validation-for="Email"></span>
            </div>
            <div id="form-password">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" name="password" tabindex="4" />
                <span asp-validation-for="Password"></span>
            </div>
            <div id="form-confirmpassword">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" name="confirmPassword" tabindex="5" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div id="form-checkbox" class="form-check">
                <input asp-for="TermsAndConditions" class="form-check-input" type="checkbox" id="flexCheckDefault" tabindex="6" /> 
                <label asp-for="TermsAndConditions" class="form-check-label text-m"></label>
                <div></div>
                <span asp-validation-for="TermsAndConditions"></span>
            </div>

            <button type="submit" tabindex="7" class="btn btn-theme-s">Sign Up</button>
        
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptPartial")
